{
  "preset": "ts-jest",
  "testEnvironment": "node",

  "roots": ["<rootDir>"],
  "testMatch": ["**/?(*.)+(spec|test).+(ts|tsx|js)"],
  "moduleFileExtensions": ["ts", "js", "json"],
  "transform": {
    "^.+\\.(ts|tsx)$": ["ts-jest", { "useESM": true }]
  },
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true,
  "extensionsToTreatAsEsm": [".ts"],
  "setupFilesAfterEnv": ["jest-extended/all"]
}
