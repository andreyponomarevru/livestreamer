{
  "name": "api",
  "version": "1.0.0",
  "description": "API server",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "serve:dev": "nodemon --watch ./src",
    "test:unit": "jest --config=./jest.unit.config.json --detectOpenHandles --watchAll --colors ./src",
    "test:int": "jest --config=jest.int.config.json --roots ./tests-integration --detectOpenHandles --runInBand --colors",
    "test:e2e-api": "jest --config=jest.int.config.json --roots ./tests-e2e-api --detectOpenHandles --runInBand --colors",
    "test:coverage": "jest --config=./jest.unit.config.json ./src --coverage",
    "test:clearjest": "jest --clearCache",
    "//": "CI ****************************************************************",
    "migrate-essential": "DATABASE_URL=\"postgres://$POSTGRES_USER:$POSTGRES_PASSWORD@$POSTGRES_HOST:$POSTGRES_PORT/$POSTGRES_DB\" node-pg-migrate --check-order --migrations-dir ./src/migrations/01-seed-essential --migrations-table pgmigrations_essential  --migration-filename-format utc --tsconfig ./tsconfig.json",
    "migrate-users": "DATABASE_URL=\"postgres://$POSTGRES_USER:$POSTGRES_PASSWORD@$POSTGRES_HOST:$POSTGRES_PORT/$POSTGRES_DB\" node-pg-migrate --no-check-order --migrations-dir ./src/migrations/02-seed-users --migrations-table pgmigrations_users --migration-filename-format utc --tsconfig ./tsconfig.json",
    "migrate-fake-data": "DATABASE_URL=\"postgres://$POSTGRES_USER:$POSTGRES_PASSWORD@$POSTGRES_HOST:$POSTGRES_PORT/$POSTGRES_DB\" node-pg-migrate --no-check-order --migrations-dir ./src/migrations/03-seed-with-fake-user-generated-data --migrations-table pgmigrations_fakedata --migration-filename-format utc --tsconfig ./tsconfig.json",
    "": "",
    "ci:lint": "eslint ./src ./test-helpers ./tests-integration ./tests-e2e-api",
    "ci:prettier": "prettier ./src ./test-helpers ./tests-integration ./tests-e2e-api --check \"**/*.{ts,tsx,js,md,mdx,css,yaml}\""
  },
  "keywords": [
    "rest",
    "api",
    "live streaming",
    "broadcasting",
    "radio"
  ],
  "author": "Andrey Ponomarev",
  "license": "ISC",
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "@faker-js/faker": "^10.1.0",
    "@sinonjs/fake-timers": "^15.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/connect-redis": "0.0.23",
    "@types/cors": "^2.8.10",
    "@types/express": "^5.0.5",
    "@types/express-session": "^1.17.4",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/joi": "^17.2.3",
    "@types/morgan": "^1.9.2",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.3",
    "@types/pg": "^8.6.3",
    "@types/pg-format": "^1.0.5",
    "@types/set-cookie-parser": "^2.4.10",
    "@types/sinonjs__fake-timers": "^15.0.1",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^11.0.0",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^30.2.0",
    "jest-extended": "^7.0.0",
    "jest-websocket-mock": "^2.2.1",
    "mock-socket": "^9.1.0",
    "node-pg-migrate": "^7.4.0",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.2",
    "set-cookie-parser": "^2.7.1",
    "superagent": "^10.2.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.4.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/amqplib": "^0.10.6",
    "amqplib": "^0.10.5",
    "bcrypt": "^5.0.1",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "express-session": "^1.17.2",
    "fs-extra": "^11.2.0",
    "joi": "^18.0.1",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^8.0.3",
    "nodemailer": "^7.0.10",
    "pg": "^8.6.0",
    "pg-format": "^1.0.4",
    "redis": "^5.9.0",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "ws": "^8.4.0"
  }
}
