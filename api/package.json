{
  "name": "api",
  "version": "1.0.0",
  "description": "API server",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "serve:dev": "nodemon --watch ./src -e ts,json --exec 'TS_NODE_PROJECT=tsconfig.json node --inspect=0.0.0.0:9229 --require ts-node/register ./src/index.ts'",
    "test:unit": "jest --detectOpenHandles --watchAll ./src --verbose",
    "test:integration": "jest --detectOpenHandles --watchAll ./tests-integration --runInBand",
    "test:e2e-api": "jest --detectOpenHandles --watchAll ./tests-e2e-api  --runInBand",
    "migratesql": "node-pg-migrate --migrations-dir ./src/migrations --migration-filename-format utc --tsconfig ./tsconfig.json --migration-file-language sql",
    "migratets": "node-pg-migrate --migrations-dir ./src/migrations --migration-filename-format utc --tsconfig ./tsconfig.json"
  },
  "keywords": [
    "rest",
    "api",
    "live streaming",
    "broadcasting",
    "radio"
  ],
  "author": "Andrey Ponomarev",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/bcrypt": "^5.0.0",
    "@types/connect-redis": "0.0.23",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/express-session": "^1.17.4",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/joi": "^17.2.3",
    "@types/morgan": "^1.9.2",
    "@types/node": "^20.14.2",
    "@types/nodemailer": "^6.4.4",
    "@types/pg": "^8.6.3",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "faker": "5.5.3",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-websocket-mock": "^2.2.1",
    "mock-socket": "^9.1.0",
    "prettier": "^3.3.2",
    "superagent": "^9.0.2",
    "ts-jest": "^29.1.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "fs-extra": "^11.2.0",
    "joi": "^17.5.0",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^7.4.0",
    "nodemailer": "^6.7.2",
    "nodemon": "^3.1.3",
    "pg": "^8.6.0",
    "pg-format": "^1.0.4",
    "redis": "^4.6.14",
    "supertest": "^7.0.0",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^5.4.5",
    "uuid": "^10.0.0",
    "winston": "^3.3.3",
    "ws": "^8.4.0"
  }
}
