{
  "name": "api",
  "version": "1.0.0",
  "description": "API server",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "serve:dev": "nodemon --watch ./src -e ts,json --exec 'TS_NODE_PROJECT=tsconfig.json node --inspect=0.0.0.0:9229 --require ts-node/register ./src/index.ts'",
    "test:unit": "jest --config=./jest.unit.config.json --verbose --detectOpenHandles --colors ./src",
    "test:int": "jest --config=jest.int.config.json --verbose --detectOpenHandles --runInBand --colors ./tests-integration",
    "test:e2e-api": "jest ./tests-e2e-api --verbose --detectOpenHandles --runInBand --colors",
    "test:coverage": "jest --config=./jest.unit.config.json ./src --coverage",
    "test:clearjest": "jest --clearCache",
    "migratesql": "DATABASE_URL=\"postgres://$POSTGRES_USER:$POSTGRES_PASSWORD@$POSTGRES_HOST:$POSTGRES_PORT/$POSTGRES_DB\" node-pg-migrate --migrations-dir ./src/migrations --migration-filename-format utc --tsconfig ./tsconfig.json --migration-file-language sql",
    "migratets": "DATABASE_URL=\"postgres://$POSTGRES_USER:$POSTGRES_PASSWORD@$POSTGRES_HOST:$POSTGRES_PORT/$POSTGRES_DB\" node-pg-migrate --migrations-dir ./src/migrations --migration-filename-format utc --tsconfig ./tsconfig.json",
    "ci:lint": "eslint       ./src ./test-helpers ./tests-e2e-api",
    "ci:prettier": "prettier ./src ./test-helpers ./tests-e2e-api --check \"**/*.{ts,tsx,js,md,mdx,css,yaml}\""
  },
  "keywords": [
    "rest",
    "api",
    "live streaming",
    "broadcasting",
    "radio"
  ],
  "author": "Andrey Ponomarev",
  "license": "ISC",
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "@faker-js/faker": "^9.4.0",
    "@types/bcrypt": "^5.0.0",
    "@types/connect-redis": "0.0.23",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/express-session": "^1.17.4",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/joi": "^17.2.3",
    "@types/morgan": "^1.9.2",
    "@types/node": "^20.14.2",
    "@types/nodemailer": "^6.4.4",
    "@types/pg": "^8.6.3",
    "@types/pg-format": "^1.0.5",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-websocket-mock": "^2.2.1",
    "mock-socket": "^9.1.0",
    "node-pg-migrate": "^7.4.0",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.2",
    "superagent": "^9.0.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.4.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "fs-extra": "^11.2.0",
    "joi": "^17.5.0",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^7.4.0",
    "nodemailer": "^6.7.2",
    "pg": "^8.6.0",
    "pg-format": "^1.0.4",
    "redis": "^4.6.14",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0",
    "winston": "^3.17.0",
    "ws": "^8.4.0"
  }
}
