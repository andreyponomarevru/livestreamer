{
 "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
    "rootDir": "."
    }
  },
  "compilerOptions": {
    "types": ["node"],


    "rootDirs": ["_unit-tests_", "_integration-tests_"],
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./build",
    
    "strict": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useUnknownInCatchVariables": false
  },
  "compileOnSave": true,
  "include": ["src/**/*", "_unit-tests_/**/*", "_integration-tests_/**/*"],
  "exclude": ["node_modules"]
}

