{
  "name": "api",
  "version": "1.0.0",
  "description": "API server",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "serve:dev": "nodemon --watch ./_unit-tests_ --watch ./src -e ts,json --exec 'npm run test:unit & TS_NODE_PROJECT=tsconfig.json node --inspect=0.0.0.0:9229 --require ts-node/register ./src/index.ts'",
    "serve:test": "nodemon --watch ./_integration-tests_ --watch ./src -e ts,json --exec 'npm run test:integration & TS_NODE_PROJECT=tsconfig.json node --inspect=0.0.0.0:9229 --require ts-node/register ./src/index.ts'",
    "test:unit": "jest --detectOpenHandles _unit-tests_",
    "test:integration": "jest --detectOpenHandles _integration-tests_",
    "test:e2e-api": "jest --detectOpenHandles _e2e-api-tests_",
    "migrate": "node-pg-migrate"
  },
  "keywords": [
    "rest",
    "api",
    "live streaming",
    "broadcasting",
    "radio"
  ],
  "author": "Andrey Ponomarev",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/connect-redis": "0.0.18",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.8",
    "@types/express-session": "^1.17.4",
    "@types/faker": "^5.5.3",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.3",
    "@types/joi": "^17.2.3",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.14.9",
    "@types/nodemailer": "^6.4.4",
    "@types/pg": "^8.6.3",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.3",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "faker": "^5.5.3",
    "jest": "^27.4.5",
    "jest-extended": "^1.2.0",
    "jest-websocket-mock": "^2.2.1",
    "mock-socket": "^9.1.0",
    "prettier": "^2.5.1",
    "superagent": "^6.1.0",
    "ts-jest": "^27.1.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "connect-redis": "^6.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.17.2",
    "express-session": "^1.17.2",
    "fs-extra": "^10.0.0",
    "handy-redis": "^2.3.1",
    "joi": "^17.5.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.2",
    "nodemon": "^2.0.15",
    "pg": "^8.6.0",
    "redis": "^3.1.2",
    "supertest": "^6.1.6",
    "swagger-ui-express": "^4.3.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "ws": "^8.4.0"
  }
}
